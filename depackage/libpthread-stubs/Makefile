################################################
#
# libpthread-stubs
#
################################################
LIBPTHREAD_STUBS_NAME		:= libpthread-stubs
LIBPTHREAD_STUBS_VERSION	:= $(CONFIG_LIBPTHREAD_STUBS_VERSION)
LIBPTHREAD_STUBS_SITE		:= $(CONFIG_LIBPTHREAD_STUBS_URL)
LIBPTHREAD_STUBS_GITHUB		:= 
LIBPTHREAD_STUBS_SUBNAME	:= 
LIBPTHREAD_STUBS_DIR		:= $(srctree)/package/libpthread-stubs
LIBPTHREAD_STUBS_PATCH		:= $(srctree)/package/libpthread-stubs/patch
LIBPTHREAD_STUBS_DEMO		:= $(srctree)/package/libpthread-stubs/demo.c
LIBPTHREAD_STUBS_OUT		:= 
LIBPTHREAD_STUBS_SCRIPTS	:= $(srctree)/scripts/package/GNU-package.sh
LIBPTHREAD_STUBS_TAR		:= $(CONFIG_LIBPTHREAD_STUBS_TAR)
LIBPTHREAD_STUBS_PACKAGE	:= 
LIBPTHREAD_STUBS_CONFIG		:=
SUB_TARGET			+= $(LIBPTHREAD_STUBS_DIR)/build

LIBPTHREAD_STUBS_sh = $(CONFIG_SHELL) $(LIBPTHREAD_STUBS_SCRIPTS) \
               $1 $(LIBPTHREAD_STUBS_NAME)X $(LIBPTHREAD_STUBS_VERSION)X \
               $(LIBPTHREAD_STUBS_SITE)X $(LIBPTHREAD_STUBS_GITHUB)X \
               $(LIBPTHREAD_STUBS_PATCH)X 5.0 \
	       $(CONFIG_LIBPTHREAD_STUBS_SRC)X $(CONFIG_MAIN_PROJ_NAME)X \
               $(LIBPTHREAD_STUBS_TAR) $(CONFIG_ARCH_MAGIC)X \
               $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X $(LIBPTHREAD_STUBS_SUBNAME)X \
               $(LIBPTHREAD_STUBS_CONFIG)X $(CONFIG_LIBPTHREAD_STUBS_CONFIG)X \
	       $(CONFIG_LIBPTHREAD_STUBS_LDFLAGS) $(CONFIG_LIBPTHREAD_STUBS_CFLAGS)

$(LIBPTHREAD_STUBS_DIR)/build: FORCE
	$(Q)$(call LIBPTHREAD_STUBS_sh,$(srctree))
