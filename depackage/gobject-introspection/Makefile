################################################
#
# gobject-introspection
#
################################################
GOBJECT_INTROSPECTION_NAME	:= gobject-introspection
GOBJECT_INTROSPECTION_VERSION	:= $(CONFIG_GOBJECT_INTROSPECTION_VERSION)
GOBJECT_INTROSPECTION_SITE	:= $(CONFIG_GOBJECT_INTROSPECTION_URL)
GOBJECT_INTROSPECTION_GITHUB	:= 
GOBJECT_INTROSPECTION_SUBNAME	:= 
GOBJECT_INTROSPECTION_DIR	:= $(srctree)/package/gobject-introspection
GOBJECT_INTROSPECTION_PATCH	:= $(srctree)/package/gobject-introspection/patch
GOBJECT_INTROSPECTION_DEMO	:= $(srctree)/package/gobject-introspection/demo.c
GOBJECT_INTROSPECTION_OUT	:= 
GOBJECT_INTROSPECTION_SCRIPTS	:= $(srctree)/scripts/package/GNU-package.sh
GOBJECT_INTROSPECTION_TAR	:= $(CONFIG_GOBJECT_INTROSPECTION_TAR)
GOBJECT_INTROSPECTION_PACKAGE	:= 
GOBJECT_INTROSPECTION_CONFIG	:=
SUB_TARGET			+= $(GOBJECT_INTROSPECTION_DIR)/build

GOBJECT_INTROSPECTION_sh = $(CONFIG_SHELL) $(GOBJECT_INTROSPECTION_SCRIPTS) \
               $1 $(GOBJECT_INTROSPECTION_NAME)X $(GOBJECT_INTROSPECTION_VERSION)X \
               $(GOBJECT_INTROSPECTION_SITE)X $(GOBJECT_INTROSPECTION_GITHUB)X \
               $(GOBJECT_INTROSPECTION_PATCH)X 5.0 \
	       $(CONFIG_GOBJECT_INTROSPECTION_SRC)X $(CONFIG_MAIN_PROJ_NAME)X \
               $(GOBJECT_INTROSPECTION_TAR) $(CONFIG_ARCH_MAGIC)X \
               $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X $(GOBJECT_INTROSPECTION_SUBNAME)X \
               $(GOBJECT_INTROSPECTION_CONFIG)X $(CONFIG_GOBJECT_INTROSPECTION_CONFIG)X \
	       $(CONFIG_GOBJECT_INTROSPECTION_LDFLAGS) $(CONFIG_GOBJECT_INTROSPECTION_CFLAGS)

$(GOBJECT_INTROSPECTION_DIR)/build: FORCE
	$(Q)$(call GOBJECT_INTROSPECTION_sh,$(srctree))
