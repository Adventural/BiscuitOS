menuconfig PK_GTK_CAIRO
	select PK_LIBPNG
	select PK_FREETYPE
	select PK_FONTCONFIG
	select PK_LIBXRENDER
	bool "cairo"

if PK_GTK_CAIRO

config GTK_CAIRO_VERSION
	default "2.26.0" if GTKR3
	default "1.10.0" if GTKR2
	string "verstion"

config GTK_CAIRO_TAR
	default "tar.xz" if GTKR3
	default "tar.gz" if GTKR2
	string "tar type"

config GTK_CAIRO_URL
	default "http://ftp.gnome.org/pub/gnome/sources/cairo/2.26/" if GTKR3
	default "https://cairographics.org/releases/" if GTKR2
	string "url"

config GTK_CAIRO_SRC
	string "source code list"

config GTK_CAIRO_LDFLAGS
	string "LDFLAGS"

config GTK_CAIRO_CFLAGS
	string "CFLAGS"

config GTK_CAIRO_CONFIG
	default "png_REQUIRES=\"libpng\" --enable-pdf=yes --enable-win32-font=no --enable-win32=no --enable-quartz-font=no --enable-quartz=no"
	string "configure"

endif # PK_GTK_CAIRO
