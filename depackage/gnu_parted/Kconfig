menuconfig PK_GNU_PARTED
	bool "GNU - parted"

if PK_GNU_PARTED

config GNU_PARTED_VERSION
	default "2.1"
	string "verstion"

config GNU_PARTED_TAR
	default "tar.gz"
	string "tar type"

config GNU_PARTED_URL
	default "http://ftp.gnu.org/pub/gnu/parted/"
	string "url"

config GNU_PARTED_LDFLAGS
	default "-libuuid"
	string "LDFLAGS"

config GNU_PARTED_CFLAGS
	string "CFLAGS"

config GNU_PARTED_CONFIG
	default "--disable-device-mapper --without-readline"
	string "configure"

endif # PK_GNU_PARTED
