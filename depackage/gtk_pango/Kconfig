menuconfig PK_GTK_PANGO
	bool "pango"

if PK_GTK_PANGO

config GTK_PANGO_VERSION
	default "2.26.0" if GTKR3
	default "1.20.0" if GTKR2
	string "verstion"

config GTK_PANGO_TAR
	default "tar.xz" if GTKR3
	default "tar.gz" if GTKR2
	string "tar type"

config GTK_PANGO_URL
	default "http://ftp.gnome.org/pub/gnome/sources/pango/2.26/" if GTKR3
	default "http://ftp.gnome.org/pub/gnome/sources/pango/1.20/" if GTKR2
	string "url"

config GTK_PANGO_SRC
	string "source code list"

config GTK_PANGO_LDFLAGS
	string "LDFLAGS"

config GTK_PANGO_CFLAGS
	string "CFLAGS"

config GTK_PANGO_CONFIG
	default "--with-x --build=i686-pc-linux-gnu"
	string "configure"

endif # PK_GTK_PANGO
