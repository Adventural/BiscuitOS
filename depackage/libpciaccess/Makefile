################################################
#
# libpciaccess
#
################################################
LIB_LIBPCIACCESS_NAME		:= libpciaccess
LIB_LIBPCIACCESS_VERSION	:= $(CONFIG_LIB_LIBPCIACCESS_VERSION)
LIB_LIBPCIACCESS_SITE		:= $(CONFIG_LIB_LIBPCIACCESS_URL)
LIB_LIBPCIACCESS_GITHUB		:= 
LIB_LIBPCIACCESS_SUBNAME	:= 
LIB_LIBPCIACCESS_DIR		:= $(srctree)/package/libpciaccess
LIB_LIBPCIACCESS_PATCH		:= $(srctree)/package/libpciaccess/patch
LIB_LIBPCIACCESS_DEMO		:= $(srctree)/package/libpciaccess/demo.c
LIB_LIBPCIACCESS_OUT		:= 
LIB_LIBPCIACCESS_SCRIPTS	:= $(srctree)/scripts/package/GNU-package.sh
LIB_LIBPCIACCESS_TAR		:= $(CONFIG_LIB_LIBPCIACCESS_TAR)
LIB_LIBPCIACCESS_PACKAGE	:= 
LIB_LIBPCIACCESS_CONFIG		:=
SUB_TARGET			+= $(LIB_LIBPCIACCESS_DIR)/build

LIB_LIBPCIACCESS_sh = $(CONFIG_SHELL) $(LIB_LIBPCIACCESS_SCRIPTS) \
               $1 $(LIB_LIBPCIACCESS_NAME)X $(LIB_LIBPCIACCESS_VERSION)X \
               $(LIB_LIBPCIACCESS_SITE)X $(LIB_LIBPCIACCESS_GITHUB)X \
               $(LIB_LIBPCIACCESS_PATCH)X 5.0 \
	       $(CONFIG_LIB_LIBPCIACCESS_SRC)X $(CONFIG_MAIN_PROJ_NAME)X \
               $(LIB_LIBPCIACCESS_TAR) $(CONFIG_ARCH_MAGIC)X \
               $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X $(LIB_LIBPCIACCESS_SUBNAME)X \
               $(LIB_LIBPCIACCESS_CONFIG)X $(CONFIG_LIB_LIBPCIACCESS_CONFIG)X \
	       $(CONFIG_LIB_LIBPCIACCESS_LDFLAGS) $(CONFIG_LIB_LIBPCIACCESS_CFLAGS)

$(LIB_LIBPCIACCESS_DIR)/build: FORCE
	$(Q)$(call LIB_LIBPCIACCESS_sh,$(srctree))
