################################################
#
# libXcomposite
#
################################################
LIB_LIBXCOMPOSITE_NAME		:= libXcomposite
LIB_LIBXCOMPOSITE_VERSION	:= $(CONFIG_LIB_LIBXCOMPOSITE_VERSION)
LIB_LIBXCOMPOSITE_SITE		:= $(CONFIG_LIB_LIBXCOMPOSITE_URL)
LIB_LIBXCOMPOSITE_GITHUB	:= 
LIB_LIBXCOMPOSITE_SUBNAME	:= 
LIB_LIBXCOMPOSITE_DIR		:= $(srctree)/package/libXcomposite
LIB_LIBXCOMPOSITE_PATCH		:= $(srctree)/package/libXcomposite/patch
LIB_LIBXCOMPOSITE_DEMO		:= $(srctree)/package/libXcomposite/demo.c
LIB_LIBXCOMPOSITE_OUT		:= 
LIB_LIBXCOMPOSITE_SCRIPTS	:= $(srctree)/scripts/package/GNU-package.sh
LIB_LIBXCOMPOSITE_TAR		:= $(CONFIG_LIB_LIBXCOMPOSITE_TAR)
LIB_LIBXCOMPOSITE_PACKAGE	:= 
LIB_LIBXCOMPOSITE_CONFIG	:=
SUB_TARGET			+= $(LIB_LIBXCOMPOSITE_DIR)/build

LIB_LIBXCOMPOSITE_sh = $(CONFIG_SHELL) $(LIB_LIBXCOMPOSITE_SCRIPTS) \
               $1 $(LIB_LIBXCOMPOSITE_NAME)X $(LIB_LIBXCOMPOSITE_VERSION)X \
               $(LIB_LIBXCOMPOSITE_SITE)X $(LIB_LIBXCOMPOSITE_GITHUB)X \
               $(LIB_LIBXCOMPOSITE_PATCH)X 5.0 \
	       $(CONFIG_LIB_LIBXCOMPOSITE_SRC)X $(CONFIG_MAIN_PROJ_NAME)X \
               $(LIB_LIBXCOMPOSITE_TAR) $(CONFIG_ARCH_MAGIC)X \
               $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X $(LIB_LIBXCOMPOSITE_SUBNAME)X \
               $(LIB_LIBXCOMPOSITE_CONFIG)X $(CONFIG_LIB_LIBXCOMPOSITE_CONFIG)X \
	       $(CONFIG_LIB_LIBXCOMPOSITE_LDFLAGS) $(CONFIG_LIB_LIBXCOMPOSITE_CFLAGS)

$(LIB_LIBXCOMPOSITE_DIR)/build: FORCE
	$(Q)$(call LIB_LIBXCOMPOSITE_sh,$(srctree))
