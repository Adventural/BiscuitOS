################################################
#
# libXinerama
#
################################################
LIB_LIBXINERAMA_NAME	:= libXinerama
LIB_LIBXINERAMA_VERSION	:= $(CONFIG_LIB_LIBXINERAMA_VERSION)
LIB_LIBXINERAMA_SITE	:= $(CONFIG_LIB_LIBXINERAMA_URL)
LIB_LIBXINERAMA_GITHUB	:= 
LIB_LIBXINERAMA_SUBNAME	:= 
LIB_LIBXINERAMA_DIR	:= $(srctree)/package/libXinerama
LIB_LIBXINERAMA_PATCH	:= $(srctree)/package/libXinerama/patch
LIB_LIBXINERAMA_DEMO	:= $(srctree)/package/libXinerama/demo.c
LIB_LIBXINERAMA_OUT	:= 
LIB_LIBXINERAMA_SCRIPTS	:= $(srctree)/scripts/package/GNU-package.sh
LIB_LIBXINERAMA_TAR	:= $(CONFIG_LIB_LIBXINERAMA_TAR)
LIB_LIBXINERAMA_PACKAGE	:= 
LIB_LIBXINERAMA_CONFIG	:=
SUB_TARGET		+= $(LIB_LIBXINERAMA_DIR)/build

LIB_LIBXINERAMA_sh = $(CONFIG_SHELL) $(LIB_LIBXINERAMA_SCRIPTS) \
               $1 $(LIB_LIBXINERAMA_NAME)X $(LIB_LIBXINERAMA_VERSION)X \
               $(LIB_LIBXINERAMA_SITE)X $(LIB_LIBXINERAMA_GITHUB)X \
               $(LIB_LIBXINERAMA_PATCH)X 5.0 \
	       $(CONFIG_LIB_LIBXINERAMA_SRC)X $(CONFIG_MAIN_PROJ_NAME)X \
               $(LIB_LIBXINERAMA_TAR) $(CONFIG_ARCH_MAGIC)X \
               $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X $(LIB_LIBXINERAMA_SUBNAME)X \
               $(LIB_LIBXINERAMA_CONFIG)X $(CONFIG_LIB_LIBXINERAMA_CONFIG)X \
	       $(CONFIG_LIB_LIBXINERAMA_LDFLAGS) $(CONFIG_LIB_LIBXINERAMA_CFLAGS)

$(LIB_LIBXINERAMA_DIR)/build: FORCE
	$(Q)$(call LIB_LIBXINERAMA_sh,$(srctree))
