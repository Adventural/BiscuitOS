	default "tar.gz"
	string "tar type"

config LIB_LIBXINERAMA_URL
	default "https://www.x.org/releases/X11R7.7/src/lib/" if X11R7_7
	default "https://www.x.org/releases/X11R7.7/src/lib/"
	string "url"

config LIB_LIBXINERAMA_SRC
	string "source code list"

config LIB_LIBXINERAMA_LDFLAGS
	string "LDFLAGS"

config LIB_LIBXINERAMA_CFLAGS
	string "CFLAGS"

config LIB_LIBXINERAMA_CONFIG
	string "configure"

endif # PK_LIBXINERAMA
