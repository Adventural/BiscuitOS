menuconfig PK_LIBXCB
	select PK_LIBXCB_PROTO
	select PK_LIBXAU
	select PK_LIBPTHREAD_STUBS
	bool "libxcb"

if PK_LIBXCB

config LIB_LIBXCB_VERSION
	default "1.8.1" if X11R7_7
	#default "1.13"
	string "verstion"

config LIB_LIBXCB_TAR
	default "tar.gz"
	string "tar type"

config LIB_LIBXCB_URL
	default "https://www.x.org/releases/X11R7.7/src/xcb/" if X11R7_7
	#default "https://www.x.org/releases/individual/xcb/"
	string "url"

config LIB_LIBXCB_SRC
	string "source code list"

config LIB_LIBXCB_LDFLAGS
	string "LDFLAGS"

config LIB_LIBXCB_CFLAGS
	string "CFLAGS"

config LIB_LIBXCB_CONFIG
	string "configure"

endif # PK_LIBXCB
