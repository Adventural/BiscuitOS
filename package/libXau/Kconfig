	default "https://www.x.org/releases/X11R7.7/src/lib/" if X11R7_7
	#default "https://www.x.org/releases/individual/lib/"
	string "url"

config LIB_LIBXAU_SRC
	string "source code list"

config LIB_LIBXAU_LDFLAGS
	string "LDFLAGS"

config LIB_LIBXAU_CFLAGS
	string "CFLAGS"

config LIB_LIBXAU_CONFIG
	string "configure"

endif # PK_LIBXAU
