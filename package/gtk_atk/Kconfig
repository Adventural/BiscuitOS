menuconfig PK_GTK_ATK
	bool "atk"

if PK_GTK_ATK

config GTK_ATK_VERSION
	default "2.26.0" if GTKR3
	default "2.2.0" if GTKR2
	string "verstion"

config GTK_ATK_TAR
	default "tar.xz" if GTKR3
	default "tar.bz2" if GTKR2
	string "tar type"

config GTK_ATK_URL
	default "http://ftp.gnome.org/pub/gnome/sources/atk/2.26/" if GTKR3
	default "http://ftp.gnome.org/pub/gnome/sources/atk/2.2/" if GTKR2
	string "url"

config GTK_ATK_SRC
	string "source code list"

config GTK_ATK_LDFLAGS
	string "LDFLAGS"

config GTK_ATK_CFLAGS
	string "CFLAGS"

config GTK_ATK_CONFIG
	string "configure"

endif # PK_GTK_ATK
