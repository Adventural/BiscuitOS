################################################
#
# emulate-pid
#
################################################
PK_BITMAP_EMULATE_PID_NAME        := emulate-pid
PK_BITMAP_EMULATE_PID_VERSION     := $(CONFIG_PK_BITMAP_EMULATE_PID_VERSION)
PK_BITMAP_EMULATE_PID_SITE        := $(CONFIG_PK_BITMAP_EMULATE_PID_URL)
PK_BITMAP_EMULATE_PID_GITHUB      := $(CONFIG_PK_BITMAP_EMULATE_PID_GITHUB)
PK_BITMAP_EMULATE_PID_SUBNAME     :=
PK_BITMAP_EMULATE_PID_BUILDARCH   := $(CONFIG_PK_BITMAP_EMULATE_PID_BUILDARCH)
PK_BITMAP_EMULATE_PID_DIR         := $(srctree)/package/bitmap/emulate-pid
PK_BITMAP_EMULATE_PID_PATCH       := $(PK_BITMAP_EMULATE_PID_DIR)/patch
PK_BITMAP_EMULATE_PID_BSBIT       := emulate-pid-$(PK_BITMAP_EMULATE_PID_VERSION).bsbit
PK_BITMAP_EMULATE_PID_OUT         :=
PK_BITMAP_EMULATE_PID_SCRIPTS     := $(srctree)/scripts/package/package-module.sh
PK_BITMAP_EMULATE_PID_TAR         := $(CONFIG_PK_BITMAP_EMULATE_PID_TAR)
PK_BITMAP_EMULATE_PID_PACKAGE     :=
PK_BITMAP_EMULATE_PID_CONFIG      := $(CONFIG_PK_BITMAP_EMULATE_PID_CONFIG)
SUB_TARGET                  += $(PK_BITMAP_EMULATE_PID_DIR)/build

PK_BITMAP_EMULATE_PID_sh = $(CONFIG_SHELL) $(PK_BITMAP_EMULATE_PID_SCRIPTS) \
                 $1X \
                 $(PK_BITMAP_EMULATE_PID_NAME)X \
                 $(PK_BITMAP_EMULATE_PID_VERSION)X \
                 $(PK_BITMAP_EMULATE_PID_SITE)X \
                 $(PK_BITMAP_EMULATE_PID_GITHUB)X \
                 $(PK_BITMAP_EMULATE_PID_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_BITMAP_EMULATE_PID_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_BITMAP_EMULATE_PID_SUBNAME)X \
                 $(CONFIG_PK_BITMAP_EMULATE_PID_CONFIG)X \
                 $(CONFIG_PK_BITMAP_EMULATE_PID_LIBPATH)X \
                 $(CONFIG_PK_BITMAP_EMULATE_PID_CPPFLAGS)X \
                 $(CONFIG_PK_BITMAP_EMULATE_PID_DPKCONFIG)X \
                 $(CONFIG_PK_BITMAP_EMULATE_PID_CFLAGS)X \
                 $(CONFIG_PK_BITMAP_EMULATE_PID_LDFLAGS)X \
                 $(CONFIG_PK_BITMAP_EMULATE_PID_CXXFLAGS)X \
                 $(CONFIG_PK_BITMAP_EMULATE_PID_ASFLAGS)X \
                 $(PK_BITMAP_EMULATE_PID_BSBIT)X \
                 $(PK_BITMAP_EMULATE_PID_BUILDARCH)X \
		 $(PK_BITMAP_EMULATE_PID_CSRCFILE)X \
                 $(CONFIG_PK_BITMAP_EMULATE_PID_SRCFILE)X \
                 $(CONFIG_PK_BITMAP_EMULATE_PID_CSRCFILE)

$(PK_BITMAP_EMULATE_PID_DIR)/build: FORCE
	$(Q)$(call PK_BITMAP_EMULATE_PID_sh,$(srctree))
