menuconfig PK_LIBTOOL
	bool "libtool"

if PK_LIBTOOL

config LIBTOOL_VERSION
	default "2.4"
	string "verstion"

config LIBTOOL_TAR
	default "tar.gz"
	string "tar type"

config LIBTOOL_URL
	default "http://ftp.gnu.org/pub/gnu/libtool/"
	string "url"

config LIBTOOL_LDFLAGS
	string "LDFLAGS"

config LIBTOOL_CFLAGS
	string "CFLAGS"

config LIBTOOL_CONFIG
	string "configure"

endif # PK_LIBTOOL
