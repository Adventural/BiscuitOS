################################################
#
# BiscuitOS-UKVM
#
################################################
PK_BISCUITOS_UKVM_NAME        := BiscuitOS-UKVM
PK_BISCUITOS_UKVM_VERSION     := $(CONFIG_PK_BISCUITOS_UKVM_VERSION)
PK_BISCUITOS_UKVM_SITE        := $(CONFIG_PK_BISCUITOS_UKVM_URL)
PK_BISCUITOS_UKVM_GITHUB      := $(CONFIG_PK_BISCUITOS_UKVM_GITHUB)
PK_BISCUITOS_UKVM_SUBNAME     :=
PK_BISCUITOS_UKVM_BUILDARCH   := $(CONFIG_PK_BISCUITOS_UKVM_BUILDARCH)
PK_BISCUITOS_UKVM_DIR         := $(srctree)/package/kvm/BiscuitOS-UKVM
PK_BISCUITOS_UKVM_PATCH       := $(PK_BISCUITOS_UKVM_DIR)/patch
PK_BISCUITOS_UKVM_BSBIT       := BiscuitOS-UKVM-$(PK_BISCUITOS_UKVM_VERSION).bsbit
PK_BISCUITOS_UKVM_OUT         :=
PK_BISCUITOS_UKVM_SCRIPTS     := $(srctree)/scripts/package/package-app.sh
PK_BISCUITOS_UKVM_TAR         := $(CONFIG_PK_BISCUITOS_UKVM_TAR)
PK_BISCUITOS_UKVM_PACKAGE     :=
PK_BISCUITOS_UKVM_CONFIG      := $(CONFIG_PK_BISCUITOS_UKVM_CONFIG)
SUB_TARGET                  += $(PK_BISCUITOS_UKVM_DIR)/build

PK_BISCUITOS_UKVM_sh = $(CONFIG_SHELL) $(PK_BISCUITOS_UKVM_SCRIPTS) \
                 $1X \
                 $(PK_BISCUITOS_UKVM_NAME)X \
                 $(PK_BISCUITOS_UKVM_VERSION)X \
                 $(PK_BISCUITOS_UKVM_SITE)X \
                 $(PK_BISCUITOS_UKVM_GITHUB)X \
                 $(PK_BISCUITOS_UKVM_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_BISCUITOS_UKVM_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_BISCUITOS_UKVM_SUBNAME)X \
                 $(CONFIG_PK_BISCUITOS_UKVM_CONFIG)X \
                 $(CONFIG_PK_BISCUITOS_UKVM_LIBPATH)X \
                 $(CONFIG_PK_BISCUITOS_UKVM_CPPFLAGS)X \
                 $(CONFIG_PK_BISCUITOS_UKVM_DPKCONFIG)X \
                 $(CONFIG_PK_BISCUITOS_UKVM_CFLAGS)X \
                 $(CONFIG_PK_BISCUITOS_UKVM_LDFLAGS)X \
                 $(CONFIG_PK_BISCUITOS_UKVM_CXXFLAGS)X \
                 $(CONFIG_PK_BISCUITOS_UKVM_ASFLAGS)X \
                 $(PK_BISCUITOS_UKVM_BSBIT)X \
                 $(PK_BISCUITOS_UKVM_BUILDARCH)X \
		 $(PK_BISCUITOS_UKVM_CSRCFILE)X \
                 $(CONFIG_PK_BISCUITOS_UKVM_SRCFILE)X \
                 $(CONFIG_PK_BISCUITOS_UKVM_CSRCFILE)

$(PK_BISCUITOS_UKVM_DIR)/build: FORCE
	$(Q)$(call PK_BISCUITOS_UKVM_sh,$(srctree))
