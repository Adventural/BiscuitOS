################################################
#
# BiscuitOS-qemu-kvm
#
################################################
PK_BISCUITOS_QEMU_KVM_NAME	:= BiscuitOS-qemu-kvm
PK_BISCUITOS_QEMU_KVM_VERSION	:= $(CONFIG_PK_BISCUITOS_QEMU_KVM_VERSION)
PK_BISCUITOS_QEMU_KVM_SITE	:= $(CONFIG_PK_BISCUITOS_QEMU_KVM_URL)
PK_BISCUITOS_QEMU_KVM_GITHUB	:= $(CONFIG_PK_BISCUITOS_QEMU_KVM_GITHUB)
PK_BISCUITOS_QEMU_KVM_SUBNAME	:=
PK_BISCUITOS_QEMU_KVM_BUILDARCH	:= $(CONFIG_PK_BISCUITOS_QEMU_KVM_BUILDARCH)
PK_BISCUITOS_QEMU_KVM_DIR	:= $(srctree)/package/kvm/BiscuitOS-QEMU-KVM
PK_BISCUITOS_QEMU_KVM_PATCH	:= $(PK_BISCUITOS_QEMU_KVM_DIR)/patch
PK_BISCUITOS_QEMU_KVM_BSBIT	:= BiscuitOS-qemu-kvm-$(PK_BISCUITOS_QEMU_KVM_VERSION).bsbit
PK_BISCUITOS_QEMU_KVM_OUT	:=
PK_BISCUITOS_QEMU_KVM_SCRIPTS	:= $(srctree)/scripts/package/package-qemu-kvm.sh
PK_BISCUITOS_QEMU_KVM_TAR	:= $(CONFIG_PK_BISCUITOS_QEMU_KVM_TAR)
PK_BISCUITOS_QEMU_KVM_PACKAGE	:=
PK_BISCUITOS_QEMU_KVM_CONFIG	:= $(CONFIG_PK_BISCUITOS_QEMU_KVM_CONFIG)
SUB_TARGET		+= $(PK_BISCUITOS_QEMU_KVM_DIR)/build

PK_BISCUITOS_QEMU_KVM_sh = $(CONFIG_SHELL) $(PK_BISCUITOS_QEMU_KVM_SCRIPTS) \
                 $1X \
                 $(PK_BISCUITOS_QEMU_KVM_NAME)X \
                 $(PK_BISCUITOS_QEMU_KVM_VERSION)X \
                 $(PK_BISCUITOS_QEMU_KVM_SITE)X \
                 $(PK_BISCUITOS_QEMU_KVM_GITHUB)X \
                 $(PK_BISCUITOS_QEMU_KVM_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_BISCUITOS_QEMU_KVM_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_BISCUITOS_QEMU_KVM_SUBNAME)X \
                 $(CONFIG_PK_BISCUITOS_QEMU_KVM_CONFIG)X \
                 $(CONFIG_PK_BISCUITOS_QEMU_KVM_LIBPATH)X \
                 $(CONFIG_PK_BISCUITOS_QEMU_KVM_CPPFLAGS)X \
                 $(CONFIG_PK_BISCUITOS_QEMU_KVM_DPKCONFIG)X \
                 $(CONFIG_PK_BISCUITOS_QEMU_KVM_CFLAGS)X \
                 $(CONFIG_PK_BISCUITOS_QEMU_KVM_LDFLAGS)X \
                 $(CONFIG_PK_BISCUITOS_QEMU_KVM_CXXFLAGS)X \
                 $(CONFIG_PK_BISCUITOS_QEMU_KVM_ASFLAGS)X \
                 $(PK_BISCUITOS_QEMU_KVM_BSBIT)X \
                 $(PK_BISCUITOS_QEMU_KVM_BUILDARCH)X

$(PK_BISCUITOS_QEMU_KVM_DIR)/build: FORCE
	$(Q)$(call PK_BISCUITOS_QEMU_KVM_sh,$(srctree))
