PK_BISCUITOS_QEMU_PCI_APP_NAME        := BiscuitOS-QEMU-PCI-Application
PK_BISCUITOS_QEMU_PCI_APP_VERSION     := $(CONFIG_PK_BISCUITOS_QEMU_PCI_APP_VERSION)
PK_BISCUITOS_QEMU_PCI_APP_SITE        := $(CONFIG_PK_BISCUITOS_QEMU_PCI_APP_URL)
PK_BISCUITOS_QEMU_PCI_APP_GITHUB      := $(CONFIG_PK_BISCUITOS_QEMU_PCI_APP_GITHUB)
PK_BISCUITOS_QEMU_PCI_APP_SUBNAME     :=
PK_BISCUITOS_QEMU_PCI_APP_BUILDARCH   := $(CONFIG_PK_BISCUITOS_QEMU_PCI_APP_BUILDARCH)
PK_BISCUITOS_QEMU_PCI_APP_DIR         := $(srctree)/package/kvm/BiscuitOS-QEMU-PCI-Application
PK_BISCUITOS_QEMU_PCI_APP_PATCH       := $(PK_BISCUITOS_QEMU_PCI_APP_DIR)/patch
PK_BISCUITOS_QEMU_PCI_APP_BSBIT       := BiscuitOS-QEMU-PCI-Application-$(PK_BISCUITOS_QEMU_PCI_APP_VERSION).bsbit
PK_BISCUITOS_QEMU_PCI_APP_OUT         :=
PK_BISCUITOS_QEMU_PCI_APP_SCRIPTS     := $(srctree)/scripts/package/package-app.sh
PK_BISCUITOS_QEMU_PCI_APP_TAR         := $(CONFIG_PK_BISCUITOS_QEMU_PCI_APP_TAR)
PK_BISCUITOS_QEMU_PCI_APP_PACKAGE     :=
PK_BISCUITOS_QEMU_PCI_APP_CONFIG      := $(CONFIG_PK_BISCUITOS_QEMU_PCI_APP_CONFIG)
SUB_TARGET                  += $(PK_BISCUITOS_QEMU_PCI_APP_DIR)/build

PK_BISCUITOS_QEMU_PCI_APP_sh = $(CONFIG_SHELL) $(PK_BISCUITOS_QEMU_PCI_APP_SCRIPTS) \
                 $1X \
                 $(PK_BISCUITOS_QEMU_PCI_APP_NAME)X \
                 $(PK_BISCUITOS_QEMU_PCI_APP_VERSION)X \
                 $(PK_BISCUITOS_QEMU_PCI_APP_SITE)X \
                 $(PK_BISCUITOS_QEMU_PCI_APP_GITHUB)X \
                 $(PK_BISCUITOS_QEMU_PCI_APP_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_BISCUITOS_QEMU_PCI_APP_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_BISCUITOS_QEMU_PCI_APP_SUBNAME)X \
                 $(CONFIG_PK_BISCUITOS_QEMU_PCI_APP_CONFIG)X \
                 $(CONFIG_PK_BISCUITOS_QEMU_PCI_APP_LIBPATH)X \
                 $(CONFIG_PK_BISCUITOS_QEMU_PCI_APP_CPPFLAGS)X \
                 $(CONFIG_PK_BISCUITOS_QEMU_PCI_APP_DPKCONFIG)X \
                 $(CONFIG_PK_BISCUITOS_QEMU_PCI_APP_CFLAGS)X \
                 $(CONFIG_PK_BISCUITOS_QEMU_PCI_APP_LDFLAGS)X \
                 $(CONFIG_PK_BISCUITOS_QEMU_PCI_APP_CXXFLAGS)X \
                 $(CONFIG_PK_BISCUITOS_QEMU_PCI_APP_ASFLAGS)X \
                 $(PK_BISCUITOS_QEMU_PCI_APP_BSBIT)X \
                 $(PK_BISCUITOS_QEMU_PCI_APP_BUILDARCH)X \
		 $(PK_BISCUITOS_QEMU_PCI_APP_CSRCFILE)X \
                 $(CONFIG_PK_BISCUITOS_QEMU_PCI_APP_SRCFILE)X \
                 $(CONFIG_PK_BISCUITOS_QEMU_PCI_APP_CSRCFILE)

$(PK_BISCUITOS_QEMU_PCI_APP_DIR)/build: FORCE
	$(Q)$(call PK_BISCUITOS_QEMU_PCI_APP_sh,$(srctree))
