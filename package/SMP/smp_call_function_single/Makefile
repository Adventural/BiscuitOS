################################################
#
# smp_call_function_single
#
################################################
PK_SMP_CALL_FUNCTION_SINGLE_NAME        := smp_call_function_single
PK_SMP_CALL_FUNCTION_SINGLE_VERSION     := $(CONFIG_PK_SMP_CALL_FUNCTION_SINGLE_VERSION)
PK_SMP_CALL_FUNCTION_SINGLE_SITE        := $(CONFIG_PK_SMP_CALL_FUNCTION_SINGLE_URL)
PK_SMP_CALL_FUNCTION_SINGLE_GITHUB      := $(CONFIG_PK_SMP_CALL_FUNCTION_SINGLE_GITHUB)
PK_SMP_CALL_FUNCTION_SINGLE_SUBNAME     :=
PK_SMP_CALL_FUNCTION_SINGLE_BUILDARCH   := $(CONFIG_PK_SMP_CALL_FUNCTION_SINGLE_BUILDARCH)
PK_SMP_CALL_FUNCTION_SINGLE_DIR         := $(srctree)/package/SMP/smp_call_function_single
PK_SMP_CALL_FUNCTION_SINGLE_PATCH       := $(PK_SMP_CALL_FUNCTION_SINGLE_DIR)/patch
PK_SMP_CALL_FUNCTION_SINGLE_BSBIT       := smp_call_function_single-$(PK_SMP_CALL_FUNCTION_SINGLE_VERSION).bsbit
PK_SMP_CALL_FUNCTION_SINGLE_OUT         :=
PK_SMP_CALL_FUNCTION_SINGLE_SCRIPTS     := $(srctree)/scripts/package/package-module.sh
PK_SMP_CALL_FUNCTION_SINGLE_TAR         := $(CONFIG_PK_SMP_CALL_FUNCTION_SINGLE_TAR)
PK_SMP_CALL_FUNCTION_SINGLE_PACKAGE     :=
PK_SMP_CALL_FUNCTION_SINGLE_CONFIG      := $(CONFIG_PK_SMP_CALL_FUNCTION_SINGLE_CONFIG)
SUB_TARGET                  += $(PK_SMP_CALL_FUNCTION_SINGLE_DIR)/build

PK_SMP_CALL_FUNCTION_SINGLE_sh = $(CONFIG_SHELL) $(PK_SMP_CALL_FUNCTION_SINGLE_SCRIPTS) \
                 $1X \
                 $(PK_SMP_CALL_FUNCTION_SINGLE_NAME)X \
                 $(PK_SMP_CALL_FUNCTION_SINGLE_VERSION)X \
                 $(PK_SMP_CALL_FUNCTION_SINGLE_SITE)X \
                 $(PK_SMP_CALL_FUNCTION_SINGLE_GITHUB)X \
                 $(PK_SMP_CALL_FUNCTION_SINGLE_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_SMP_CALL_FUNCTION_SINGLE_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_SMP_CALL_FUNCTION_SINGLE_SUBNAME)X \
                 $(CONFIG_PK_SMP_CALL_FUNCTION_SINGLE_CONFIG)X \
                 $(CONFIG_PK_SMP_CALL_FUNCTION_SINGLE_LIBPATH)X \
                 $(CONFIG_PK_SMP_CALL_FUNCTION_SINGLE_CPPFLAGS)X \
                 $(CONFIG_PK_SMP_CALL_FUNCTION_SINGLE_DPKCONFIG)X \
                 $(CONFIG_PK_SMP_CALL_FUNCTION_SINGLE_CFLAGS)X \
                 $(CONFIG_PK_SMP_CALL_FUNCTION_SINGLE_LDFLAGS)X \
                 $(CONFIG_PK_SMP_CALL_FUNCTION_SINGLE_CXXFLAGS)X \
                 $(CONFIG_PK_SMP_CALL_FUNCTION_SINGLE_ASFLAGS)X \
                 $(PK_SMP_CALL_FUNCTION_SINGLE_BSBIT)X \
                 $(PK_SMP_CALL_FUNCTION_SINGLE_BUILDARCH)X \
		 $(PK_SMP_CALL_FUNCTION_SINGLE_CSRCFILE)X \
                 $(CONFIG_PK_SMP_CALL_FUNCTION_SINGLE_SRCFILE)X \
                 $(CONFIG_PK_SMP_CALL_FUNCTION_SINGLE_CSRCFILE)

$(PK_SMP_CALL_FUNCTION_SINGLE_DIR)/build: FORCE
	$(Q)$(call PK_SMP_CALL_FUNCTION_SINGLE_sh,$(srctree))
